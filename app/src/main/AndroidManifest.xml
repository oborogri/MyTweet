<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.mytweet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Signup"
            android:label="@string/app_signup">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="app.mytweet.activities.Welcome"/>
        </activity>
        <activity
            android:name=".activities.Login"
            android:label="@string/app_login"/>
        <activity
            android:name=".activities.Timeline"
            android:label="@string/app_timeline"/>
    </application>

</manifest>