<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_tweet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.mytweet.activities.MyTweet">

    <Button
        android:text="@string/tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="18dp"
        android:id="@+id/tweet"
        style="@android:style/Widget.Button" />

    <TextView
        android:text="@string/tweet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tweet"
        android:layout_alignParentStart="true"
        android:id="@+id/chars_tweet"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/tweet_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_tweet"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="159dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:text="@string/tweet_date"/>

    <Button
        android:text="@string/email_via"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_tweet"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/contact_tweet"
        style="@android:style/Widget.Button" />

    <Button
        android:text="@string/select_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_tweet"
        android:layout_above="@+id/email_tweet"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.Button" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tweet"
        android:layout_toEndOf="@+id/chars_tweet"
        android:id="@+id/text_tweet"
        android:layout_alignParentStart="true"
        android:hint="What's on your mind?"
        android:inputType="textMultiLine" />

</RelativeLayout>
